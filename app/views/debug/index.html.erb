<h1>Server Debug Page</h1>

<h2>Environment</h2>
<p>Rails: <%= Rails.env %></p>
<pre><%= `gem environment` %></pre>

<h2>Logs</h2>
<% output = `ls log` %>

<ul>
<% output.split.each do |fname| %>
  <li><%= link_to(fname, url_for(:action => 'send_file', :fname => fname)) %></li>
<% end %>
</ul>

<h2>Background Jobs</h2>
<% jobs = Bj.table.job.find(:all)  %>
<% jobs.each do |job| %>
  <p><%= job.to_yaml %></p>
<% end %>